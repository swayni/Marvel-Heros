<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelHeros" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_custom_1</item>
        <item name="colorPrimaryVariant">@color/gray_custom_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_custom_2</item>
        <item name="colorSecondaryVariant">@color/gray_custom_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" >false</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.MarvelHeros.SplashTheme" parent="SplashTheme">
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/marvel_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.MarvelHeros</item>
    </style>
</resources>